{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "build": {
    "env": {
      "BUILD_BACKEND": "cd backend && pnpm build",
      "LIST_DIRS": "ls -R backend && ls -R frontend"
    }
  }
}